<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutUsername"
            android:hint="Display name"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            app:counterEnabled="true"
            app:counterTextAppearance="@style/CounterText"
            app:counterMaxLength="20"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            app:helperTextEnabled="true"
            app:helperText="Others people will see your display name"
            app:helperTextTextAppearance="@style/HelperText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_username"
                android:background="@color/edittext_bg"
                android:padding="10dp"
                android:maxLength="20"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:ems="14"
                android:textColor="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_view_part"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:ccp_defaultNameCode="TH"
            app:ccp_showFullName="true"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutPhone"
            android:hint="Phone number"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_phone"
                android:inputType="phone"
                android:background="@color/edittext_bg"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:maxLength="16"
                android:textColor="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_refer"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutVerifyCode"
            android:hint="Code"
            android:textColorHint="@color/white"
            app:errorEnabled="false"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_verify_code"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/edittext_bg"
                android:drawableLeft="@drawable/ic_lock"
                android:ems="8"
                android:gravity="center"
                android:maxLength="6"
                android:padding="10dp"
                android:textColor="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/resend_code"
            android:text="Resend code"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Continue"
                android:id="@+id/verify_btn"
                android:background="@drawable/round_btn"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/verify_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>